#include "main.h"

//Function to initialize ADC in automode
void initAutoADC(unsigned char channel) {
	//disable global interrupts
	cli();

	//initialize the ADC
	InitADC(channel);

	//Enable auto trigger
	ADCSRAbits._ADATE = 1;

	//Set ADC to free run mode
	ADCSRBbits._ADTS0 = 0;
	ADCSRBbits._ADTS1 = 0;
	ADCSRBbits._ADTS2 = 0;

	//Enable ADC interrupts
	ADCSRAbits._ADIE = 1;

	//Set channel for autoADC
	ADMUX &= 0b11100000;
	ADMUX |= channel;

	//Start first conversion, ADC will automatically start subsequent conversions after each is comlpeted
	ADCSRAbits._ADSC = 1;

	//enable global interrupts
	sei();
}

//AutoADC ISR, called when conversion is complete
ISR(ADC_vect){
	p_ul(ADC);
	println("");
}

