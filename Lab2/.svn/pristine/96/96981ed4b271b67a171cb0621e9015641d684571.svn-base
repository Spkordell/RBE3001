#include "main.h"

void driveLink(char link, signed int value){
	if(link == 'L') {
		if(value >= 0){
			setDAC(0,0);
			setDAC(1,value);
		} else {
			setDAC(0,-value);
			setDAC(1,0);
		}
	} else if (link == 'H'){
		if(value >= 0){
			setDAC(2,0);
			setDAC(3,value);
		} else {
			setDAC(2,-value);
			setDAC(3,0);
		}
	}
}

void driveLinkPercent(char whichLink, float value){
	driveLink(whichLink,DAC_MAX_VALUE*value);
}
